/**index.wxss**/
.container {
	width: 100vw;
	height: 100vh;
	background: url('https://z3.ax1x.com/2021/10/16/5G9nZn.jpg');
	background-size: contain;
	padding: 0;
}
page {
	height: 100vh;
	width: 100vw;
}

.card {
	position: absolute;
	top: 10vh;
	width: 80vw;
	height: 80vh;
	background: white;
	border-radius: 20rpx;
	box-shadow: 0 3px 12px 8px rgba(0, 0, 0, 0.35);
}

.top {
	height: 20%;
	width: 100%;
}

.love1 {
	width: 80vw;
	height: 8vh;
}
.love2 {
	position: absolute;
	right: 1px;
	bottom: 1px;
}
.love1 image,
.love2 image {
	height: 100rpx;
	width: 100rpx;
}
.love2 image {
	transform: rotate(180deg);
}

.pigtail {
	width: 80vw;
	height: 10vh;
}

.pigtail image {
	width: 40vw;
	height: 10vh;
	position: absolute;
	left: 20vw;
	top: 5vh;
}

.view_fengexian {
	width: 96%;
	height: 50rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	margin: 0rpx 2% 0rpx 2%;
}

/* 两个view的样式 */
.view_fengexian view {
	width: 33%;
	height: 2rpx;
	background: linear-gradient(to right, #ead6ee, #a0f1ea);
}

/* 字体的样式 */
.text_fengexian {
	font-size: 25rpx;
	color: rgb(253, 143, 143);
	margin: 0rpx 2% 0rpx 2%;
}

.bottom {
	width: 100%;
	height: 80%;
}

.people {
	width: 80%;
	height: 20vh;
	margin-bottom: 3vh;
	margin-left: 8vw;
	background: rgb(224, 252, 249);
	border: gray dashed;
	border-radius: 25rpx;
}

.uuid {
	width: 80%;
	font-size: 30rpx;
	text-align: center;
	line-height: 4vh;
	height: 4vh;
	margin-left: 8vw;
	background: rgba(251, 255, 229, 100);
	margin-bottom: 3vh;
	border-radius: 25rpx;
	border: gray dashed;
}

.enermy {
	background: #f9dddd;
}

.avatar {
	width: 10vh;
	height: 10vh;
	border-radius: 500px;
	margin-top: 5vh;
	margin-left: 3vw;
}

.number {
	width: 50%;
	height: 5vh;
	display: inline-block;
	margin-left: 3vw;
	background: white;
	border-radius: 25px;
	position: relative;
	bottom: 4vh;
	text-align: center;
	line-height: 5vh;
}
